<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <include
        layout="@layout/topview"
        android:id="@+id/top_view"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="登录"
        android:gravity="center"
        style="@style/Text_18"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"
        android:text="运营中心后台管理系统"
        android:gravity="center"
        style="@style/Text_18"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="16sp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/shape_login_et"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp"
        android:id="@+id/login_accout"
        android:hint="请输入您的账号"
        android:maxLength="20"
        android:textColor="@color/text_1"
        android:textColorHint="@color/text_c"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="16sp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:inputType="textPassword"
        android:background="@drawable/shape_login_et"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/login_psw"
        android:hint="请输入您的密码"
        android:maxLength="20"
        android:textColor="@color/text_1"
        android:textColorHint="@color/text_c"/>
    <Button
        style="@style/btn_login"
        android:id="@+id/login_btn"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/my_et_psw"
        android:enabled="false"
        android:text="登    录" />

</LinearLayout>